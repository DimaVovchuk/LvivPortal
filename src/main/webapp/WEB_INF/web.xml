<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" id="WebApp_ID"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <welcome-file-list>
        <welcome-file></welcome-file>
    </welcome-file-list>

    <jsp-config>
        <taglib>
            <taglib-uri>customtags</taglib-uri>
            <taglib-location>/WEB_INF/tld/custom.tld</taglib-location>
        </taglib>
    </jsp-config>

    <servlet>
        <servlet-name>WelcomeServlet</servlet-name>
        <servlet-class>com.lab.epam.servlet.WelcomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LocalizationServlet</servlet-name>
        <servlet-class>com.lab.epam.servlet.LocalizationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WelcomeServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LocalizationServlet</servlet-name>
        <url-pattern>/local</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.lab.epam.listener.Log4jInit</listener-class>
    </listener>

</web-app>